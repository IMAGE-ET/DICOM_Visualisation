# Find ITK.
FIND_PACKAGE(ITK REQUIRED)
IF(ITK_FOUND)
  INCLUDE_DIRECTORIES(${ITK_INCLUDE_DIRS})
ENDIF(ITK_FOUND)

#Find OpenGL
FIND_PACKAGE(GLUT)
IF(GLUT_FOUND)
  INCLUDE_DIRECTORIES(${GLUT_INCLUDE_DIRS})
ENDIF(GLUT_FOUND)

FIND_PACKAGE(OpenGL)
IF(OpenGL_FOUND)
  INCLUDE_DIRECTORIES(${OpenGL_INCLUDE_DIRS})
ENDIF(OpenGL_FOUND)

ADD_EXECUTABLE(CTvisualisation visualisation.cxx)

SET(requiredLibs ${requiredLibs} mgl)
TARGET_LINK_LIBRARIES(CTvisualisation ${ITK_LIBRARIES} ${MATHGL_LIBRARIES} ${GLUT_LIBRARIES} ${OPENGL_LIBRARIES} ${requiredLibs} ${optionalLibs})
